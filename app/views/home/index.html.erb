<section class="darkgrey_section homepage">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-12 text-center">
          <h2>
            Fidness offers personalised one to one training sessions live on our site or in person in many disciplines with the best trainers to help you achieve your health and fitness goals
          </h2>
          <p>
            <a href="#" class="theme_btn">Know More</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>


<section id="classes" class="color_section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2 class="block-header"><strong>Trainers</strong></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <!--vertical slider -->
                <div class="vertical-slider">
                  <% @trainers.each do |trainer| %>
                    <div class="slide media darkgrey_section">
                      <%= link_to(trainer_path(trainer.id), class: "pull-left") do %>
                        <%= image_tag(trainer&.avatar, alt: "image01", class: "media-object") if trainer.avatar.attached? %>
                      <% end %>

                      <div class="media-body">
                        <%= link_to(trainer_path(trainer.id)) do %>
                          <h3><%= trainer.first_name %></h3>
                        <% end %>
                        <p><%= trainer.profile.try(:short_description) %></p>
                      </div>
                    </div>
                  <% end %>
                </div><!-- End of vertical slider -->
            </div>
        </div>
    </div>
</section>

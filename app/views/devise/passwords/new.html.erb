<section class="darkgrey_section">
  <div class="container login">
    <div class="col-sm-5 text-center">

      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, class: "col-sm-2 control-label" %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %><br/>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'theme_btn' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>

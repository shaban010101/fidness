<section class="darkgrey_section">
  <div class="container sign-up">
    <div class="col-sm-5 text-center">
      <h1 class="sign-up"><strong>Sign up</strong></h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"form-horizontal") do |f| %>
          <%= render 'layouts/error_messages', object: f.object %>

          <div class="form-group">
            <%= f.label :email, class: "col-sm-2 control-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label 'Account type', class: "col-sm-2 control-label" %><br />
            <%= f.select :type, %w(Client Trainer), class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "col-sm-2 control-label" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "col-sm-2 control-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <div class="col-sm-8">
              <%= link_to(terms_and_conditions_path) do %>
                <p>Ticking this checkbox, you agree to this sites Terms and Conditions </p>
              <% end %>
            </div>
            <%= f.check_box :terms_and_conditions_accepted, class: "col-sm-2" %>
          </div>

          <div class="form-group">
            <div class="col-sm-12">
              <%= f.submit "Sign up", class: "theme_btn" %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</section>

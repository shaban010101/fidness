<section class="darkgrey_section">
  <div class="container login">
    <div class="col-sm-5 text-center">
      <h2>Log in</h2>
     
      <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
       <%= render 'layouts/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-2 control-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "theme_btn" %>
        <%= render "devise/shared/links" %>
      </div> 
      <% end %>
    </div>
  </div>
</section>
